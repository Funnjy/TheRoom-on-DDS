SOURCE_DIR = 

TARGET_ARCH=x64Win64VS2015

# If undefined in the environment default NDDSHOME to install dir
ifndef NDDSHOME
NDDSHOME := C:\Program Files\rti_connext_dds-5.3.0\bin\..
endif

JAVA_PATH = java
JAVAC_PATH = javac

JAVA_SOURCES = $(SOURCE_DIR)./Thermometer.java $(SOURCE_DIR)./ThermometerSeq.java $(SOURCE_DIR)./ThermometerTypeSupport.java $(SOURCE_DIR)./ThermometerDataReader.java $(SOURCE_DIR)./ThermometerDataWriter.java $(SOURCE_DIR)./ThermometerSubscriber.java $(SOURCE_DIR)./ThermometerPublisher.java
CLASS_FILES  = $(JAVA_SOURCES:%.java=%.class)

RTI_CLASSPATH := $(NDDSHOME)/lib/java/nddsjava.jar

%.class : %.java
	$(JAVAC_PATH)  -classpath ".;$(RTI_CLASSPATH)" $<

all: $(CLASS_FILES)
 
#
# Convenient way to run the java programs
#

export PATH := $(NDDSHOME)/lib/x64Win64VS2015;$(PATH)

ThermometerPublisher: ./ThermometerPublisher.class
	$(JAVA_PATH)  -classpath ".;$(RTI_CLASSPATH)" ThermometerPublisher $(ARGS)
 
ThermometerSubscriber: ./ThermometerSubscriber.class
	$(JAVA_PATH)  -classpath ".;$(RTI_CLASSPATH)" ThermometerSubscriber $(ARGS)
